                        <button type="submit" class="btn btn-warning btn-circle btn-xl" id="tooltip2" data-toggle="tooltip" data-placement="bottom" name="edit_user" title="Editar usuario" name="crear_user"><i class="fa fa-cogs"></i></button>
                    </td>
                </tr>

                {% endfor %}
            </tbody>
            </thead>
        </table>
    </form>
        {% endblock %}