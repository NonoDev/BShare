{% extends "base.html.twig" %}
{% block contenido %}
<style type="text/css">
.btn-circle.btn-xl{
            float: left;
            width: 80px;
            height: 40px;
            border-radius: 0;
            font-size: 18px;
            color: #fff;
            padding: 2px 25px;
            margin-right: 2%;
            }
            .btn-danger{
                background: #FA3031;
            }
            .btn-warning{
                background: #F88529;
                }
    </style>
<h1 class="page-header">Listado de usuarios</h1>
<form class="form-horizontal" role="form" method="post" action="/">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>NÂº</th><th>Usuario</th><th>Nombre completo</th><th>Administrador</th><th>Acciones</th>
            </tr>
        <tbody>
                {% for user in users %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.nombre_usuario }}</td>
                    <td>{{user.nombre_completo }}</td>
                    <td>{{user.administrador }}</td>
                    <td>
