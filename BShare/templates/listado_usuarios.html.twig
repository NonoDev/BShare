{% extends "base.html.twig" %}
{% block contenido %}
<style type="text/css">
        thead{
            color: #ffffff;
            background-color: #52B9E9;
        }
        .btn-circle.btn-xl{
            float: left;
            width: 80px;
            height: 40px;
            border-radius: 0;
            font-size: 18px;
            color: #fff;
            padding: 8px 25px;
            margin-right: 2%;
        }
        .btn-danger{
            background: #FA3031;
        }
        .btn-warning{
            background: #F88529;
        }
        thead{
            border-bottom-color: #52B9E9;
        }
    </style>
<h1 class="page-header">Listado de usuarios</h1>
<form class="form-horizontal" role="form" method="post" action="/">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nº</th><th>Usuario</th><th>Nombre completo</th><th>Administrador</th><th>Acciones</th>
            </tr>
        <tbody>
                {% for user in users %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.nombre_usuario }}</td>
                    <td>{{user.nombre_completo }}</td>
                    <td>{% if user.administrador == 1 %} Si {% else %} No {% endif %}</td>
                    <td>
                        <button id="tooltip3" type="submit" class="btn btn-danger btn-circle btn-xl" data-toggle="tooltip" data-placement="bottom" name="borrar_user" title="Borrar usuario" value="{{ user.id }}"><i class="fa fa-eraser"></i></button>
                        <button type="submit" class="btn btn-warning btn-circle btn-xl" id="tooltip2" data-toggle="tooltip" data-placement="bottom" name="edit_usuario" title="Editar usuario" value="{{ user['id'] }}"><i class="fa fa-cogs"></i></button>
                    </td>
                </tr>

                {% endfor %}
            </tbody>
            </thead>
        </table>
        <a href="{{ urlFor('gestion') }}" role="button" id="tooltip1" type="button" class="btn btn-danger btn-circle btn-xl" data-toggle="tooltip" data-placement="bottom" title="Volver a gestión de usuarios"><i class="fa fa-arrow-left"></i></a>
    </form>
        {% endblock %}