    function creaXmlHttpRequest() {
        var xmlHttp;
        if (window.XMLHttpRequest) {
            xmlHttp = new XMLHttpRequest();
        }
        else {
            if (window.ActiveXObject) {
                xmlHttp = new ActiveXObject("Microsoft.XMLHTTP");
            }
        }
        return xmlHttp;
    }

    function muestraDatos() {
        conexion = creaXmlHttpRequest();
        // url = escape("http://www.gpalomares.com.es/daw/quiniela.php?opcion=1");
        conexion.open("GET", "/muestraCursos?muestra=cursos", true);
        conexion.onreadystatechange = devuelveConsulta;
        conexion.send();
    }

    function devuelveConsulta() {
        if (conexion.readyState == 4 /* && conexion.status==200*/) {
            nivel = conexion.responseText;
            nivel = JSON.parse(nivel);
            rellenaSelect(nivel);
        }
        else {
            //resp.innerHTML = "...Cargando...";
        }
    }
