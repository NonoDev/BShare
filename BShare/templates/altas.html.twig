    function rellenaSelect(niveles) {
        var aRellenar = document.getElementById("curso");
        
        var j = 1; 
        for (var i = 0; i < niveles.length; i++) {
            
            var d = niveles[i].nombre;
            console.log(d);
            aRellenar.options.add(new Option(d,i));
        }
