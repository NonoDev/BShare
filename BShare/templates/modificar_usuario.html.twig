{% extends "base.html.twig" %}
{% block titulo %}Modificación de usuarios{% endblock %}
{% block contenido %}
<style type="text/css">
        .panel{
            border-radius: 0;
        }
        .panel-default > .panel-heading {
            color: #fff;
            background-color: #52B9E9;
            border-color: #ddd;
        }
        .btn-circle.btn-xl{
            float: left;
            width: 80px;
            height: 40px;
            border-radius: 0;
            font-size: 18px;
            color: #fff;
            padding: 8px 25px;
            margin-right: 2%;
        }
        .btn-danger{
            background: #FA3031;
        }
        .btn-warning{
            background: #F88529;
        }
        #form1{
            margin-bottom: 20px;

        }
        #form1 button{
            display: inline-block;
            color: #ffffff;
            padding: 7px 25px;
            margin-left: 10px;
        }

    </style>
    <h1 class="page-header">Modificar usuarios</h1>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-5">
            <form class="form-inline" role="form" id="form1" method="post" action="/">
                <div class="form-group">
                    <label class="sr-only" for="search">Buscar</label>
                    <input type="password" class="form-control" name="search" id="pass" placeholder="Buscar nombre de usuario">
                </div>
                <button type="submit" class="btn btn-success" name="boton_buscar" >Buscar</button>
            </form>
        </div>
    </div>
    <form class="form-horizontal" role="form" method="post" action="/">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-cogs"></i> Modificación del usuario {{ modificar_user['nombre_usuario'] }}</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="nombre_usuario" class="col-sm-2 control-label">Nombre de usuario</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_usuario" name="nombre_user" value="{{ modificar_user.nombre_usuario }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="full_name" class="col-sm-2 control-label">Nombre completo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="full_name" name="full_name" value="{{ modificar_user.nombre_completo }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-2 control-label">Contraseña</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="pass" id="pass" value="{{ modificar_user.usuario_pass }}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <label class="col-sm-offset-0 control-label">Administrador</label>
                        <label class="checkbox-inline">
                            <input type="radio" id="inlineCheckbox1" value="1" name="user" {% if modificar_user.administrador == 1 %} checked {% else %} {% endif %}> Si
                        </label>
                        <label class="checkbox-inline">
                            <input type="radio" id="inlineCheckbox2" value="0" name="user" {% if modificar_user.administrador != 1 %} checked {% else %} {% endif %}> No
                        </label>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-warning btn-circle btn-xl" id="tooltip2" data-toggle="tooltip" data-placement="bottom" title="Actualizar cambios" name="actualizar2" value="{{ modificar_user['id'] }}"><i class="fa fa-upload"></i></button>
                    </div>
                </div>

            </div>
        </div>
        <a href="{{ urlFor('gestion') }}" role="button" id="tooltip3" type="button" class="btn btn-danger btn-circle btn-xl" data-toggle="tooltip" data-placement="bottom" title="Volver a gestion de usuarios"><i class="fa fa-arrow-left"></i>
        </a>
        <a href="{{ urlFor('listado_usuarios') }}" id="tooltip1" role="button" type="button" class="btn btn-info btn-circle btn-xl" data-toggle="tooltip" data-placement="bottom" title="Ir a listado de usuarios"><i class="fa fa-arrow-right"></i></a>           
        {% endblock %}